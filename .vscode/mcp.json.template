{
  "servers": {
    "chunkhound": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "${CHUNKHOUND_DIR}",
        "chunkhound",
        "mcp"
      ],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "CHUNKHOUND_CONFIG": "${CHUNKHOUND_CONFIG}"
      }
    }
  }
}